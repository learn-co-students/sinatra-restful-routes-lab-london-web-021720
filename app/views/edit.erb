<form method="post" action="/recipes/<%= @recipe.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">

    <label for="title"> Name</label>
    <input type="text" id=":name" name="name" value="<%= @recipe.name %>">
    <label for="ingredients">Ingredients</label>
    <input type="text" id=":ingredients" name="ingredients" value="<%= @recipe.ingredients %>"><br>
    <br>
    <label for="cook_time">Cooking Time</label>
    <input type="text" id=":cook_time" name="cook_time" value="<%= @recipe.cook_time %>"><br>
    <br>

    <input type="submit" value="submit">

</form>